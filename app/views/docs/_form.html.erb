<%= form_for @doc, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :attachment_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :attachment_file_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :attachment_content_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :attachment_content_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :attachment_file_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :attachment_file_size, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :attachment_updated_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :attachment_updated_at, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :attachment_fingerprint, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :attachment_fingerprint, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                docs_path, :class => 'btn' %>
  </div>
<% end %>
