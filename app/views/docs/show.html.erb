<%- model_class = Doc -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:attachment_file_name) %>:</strong></dt>
  <dd><%= @doc.attachment_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attachment_content_type) %>:</strong></dt>
  <dd><%= @doc.attachment_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attachment_file_size) %>:</strong></dt>
  <dd><%= @doc.attachment_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attachment_updated_at) %>:</strong></dt>
  <dd><%= @doc.attachment_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attachment_fingerprint) %>:</strong></dt>
  <dd><%= @doc.attachment_fingerprint %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              docs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_doc_path(@doc), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              doc_path(@doc),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
